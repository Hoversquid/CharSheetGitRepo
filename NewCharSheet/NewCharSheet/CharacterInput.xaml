<UserControl x:Class="CharacterSheet.CharacterInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CharacterSheet"
             mc:Ignorable="d" 
             d:DesignWidth="255" Height="37">
    <Grid Height="37" VerticalAlignment="Top">
        <Label x:Name="label" Grid.Column="0" Content="Label" Margin="5,5,0,0" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Grid.Column="1" LostKeyboardFocus="textBox_LostKeyboardFocus" Text="TextBox" Margin="10,5,10,0" Grid.ColumnSpan="2" Height="29" VerticalAlignment="Top"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="82"/>
            <ColumnDefinition Width="73"/>
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
